<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/top_background1"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:background="@drawable/top_background"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="88dp"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="230dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="55dp"
                        android:fontFamily="@font/plus_jakarta_sans_extralight"
                        android:text="Sign Up For Free !"
                        android:textAlignment="center"
                        android:textColor="@color/whites"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="157dp"
                        android:scaleType="centerInside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_swap_plus" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="550dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="300dp"
                        android:layout_height="18dp"
                        android:fontFamily="@font/plus_jakarta_sans_extralight"
                        android:text="Email Address"
                        android:textColor="#242E49"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/background_input"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="252dp"
                            android:layout_height="37dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="19dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="32dp"
                                android:layout_height="37dp"
                                app:srcCompat="@drawable/ic_email"
                                tools:layout_gravity="start" />

                            <EditText
                                android:id="@+id/editTextTextEmailAddress3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="Enter your email address"
                                android:inputType="textEmailAddress"
                                android:paddingTop="12dp"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/plus_jakarta_sans_extralight"
                        android:text="Password"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginTop="145dp"
                        android:background="@drawable/background_input"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="290dp"
                            android:layout_height="37dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="19dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="32dp"
                                android:layout_height="37dp"
                                android:layout_gravity="start"
                                app:srcCompat="@drawable/ic_lock" />

                            <EditText
                                android:id="@+id/editTextTextPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10" />

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:background="@color/whites"
                                app:srcCompat="@drawable/ic_eye"
                                tools:layout_gravity="center" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="145dp"
                        android:fontFamily="@font/plus_jakarta_sans_extralight"
                        android:text="Password Confimation"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginTop="270dp"
                        android:background="@drawable/background_input"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="290dp"
                            android:layout_height="37dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="19dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="32dp"
                                android:layout_height="37dp"
                                android:layout_gravity="start"
                                app:srcCompat="@drawable/ic_lock" />

                            <EditText
                                android:id="@+id/editTextTextPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10" />

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:background="@color/whites"
                                app:srcCompat="@drawable/ic_eye"
                                tools:layout_gravity="center" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="350dp"
                        android:background="@drawable/background_text_error"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_warning" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="290dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/plus_jakarta_sans_extralight"
                                android:text="ERROR: Password do not match!"
                                android:textAlignment="viewStart"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_signin"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginTop="420dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background_signin"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="87dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="125dp"
                                android:layout_marginTop="24dp">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="51dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plus_jakarta_sans_extralight"
                                    android:gravity="start"
                                    android:text="Sign In"
                                    android:textColor="@color/whites"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginStart="58dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:srcCompat="@drawable/ic_signin_arrow" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>