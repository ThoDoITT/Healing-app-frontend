<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/top_background1"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:background="@drawable/top_background"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="88dp"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="150dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="108dp"
                        android:layout_marginTop="55dp"
                        android:fontFamily="@font/plus_jakarta_sans_extralight"
                        android:text="Sign In"
                        android:textAlignment="center"
                        android:textColor="@color/whites"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="157dp"
                        android:scaleType="centerInside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_swap_plus" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="499dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="300dp"
                        android:layout_height="18dp"
                        android:text="Email Address"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/background_input"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="252dp"
                            android:layout_height="37dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="19dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="32dp"
                                android:layout_height="37dp"
                                android:padding="2dp"
                                app:srcCompat="@drawable/ic_email"
                                tools:layout_gravity="start" />

                            <EditText
                                android:id="@+id/editEmailLogin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="  Input Email"
                                android:inputType="textEmailAddress"
                                android:paddingTop="12dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:textColor="@color/black"
                        android:text="Password"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginTop="145dp"
                        android:background="@drawable/background_input"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="290dp"
                            android:layout_height="37dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="19dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="32dp"
                                android:layout_height="37dp"
                                android:layout_gravity="start"
                                android:padding="2dp"
                                app:srcCompat="@drawable/ic_lock" />

                            <EditText
                                android:id="@+id/editPasswordLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:hint="passwork"
                                android:textSize="12sp"
                                android:ems="10" />

                            <ImageButton
                                android:id="@+id/btnShowPassSigin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:background="@color/whites"
                                app:srcCompat="@drawable/ic_eye"
                                tools:layout_gravity="center" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_signin"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginTop="255dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/btnSubmitLogin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background_signin"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="87dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="125dp"
                                android:foregroundGravity="center"
                                android:layout_marginTop="24dp">

                                <TextView
                                    android:id="@+id/textView435"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:gravity="start"
                                    android:text="Đăng nhập"
                                    android:textColor="@color/whites"

                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="350dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/or" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="374dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/btnRegisterSigin"
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:background="@drawable/button_background_signin"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="87dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="125dp"
                                android:foregroundGravity="center"
                                android:layout_marginTop="24dp">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="Đăng kí"

                                    android:textColor="@color/whites"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:ignore="MissingConstraints" />


                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>